---
import CardLaunch from "../components/CardLaunch.astro";
import { getOldestLaunches} from "../services/spacex"
const launches = await getOldestLaunches()
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    launches.map(({id, name, links, details, flight_number:flightNumber, success}) => (
      <CardLaunch
      id={id}
      name={name}
      img={links.patch.small}
        details={details}
        flightNumber={flightNumber}
        success={success}
      />
    ))
  }
</div>
